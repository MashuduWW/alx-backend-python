#!/bin/bash

set -e  # Exit on error

# Check if minikube is installed
if ! command -v minikube &> /dev/null
then
    echo "âŒ Minikube is not installed. Please install Minikube first."
    echo "ğŸ‘‰ https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

echo "âœ… Minikube is installed."

# Start Minikube
echo "ğŸš€ Starting Minikube..."
minikube start --driver=docker

# Verify cluster status
echo "ğŸ” Verifying cluster..."
kubectl cluster-info

# Get available pods (in all namespaces)
echo "ğŸ“¦ Retrieving pods..."
kubectl get pods --all-namespaces

echo "ğŸ‰ Kubernetes cluster is up and running!"
